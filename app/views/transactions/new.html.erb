<div class="row container h-4">
  <div class="col-6 ">
    <div class="container mt-3 card-bg shdw p-3">
  <h1 class="mt-3">Create a Transaction</h1>
<%= form_with(model: @transaction, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>
<%= render 'shared/error_messages' %>
<div class="form-group ">
  <%=f.label :name%>
  <%=f.text_field :name, class: "form-control"%>
</div>
<div class="form-group ">
  <%=f.label :amount%>
  <%=f.text_field :amount, class: "form-control"%>
</div>
<div class="form-group ">
  <%=f.label :group%>
   <%= f.date_field :group, class: "form-control" %>
</div>
  <div class="form-group">
    <%=f.submit "Create Transaction", class: "btn btn-success"%>
  </div>
  
<% end %>
</div>
    
  </div>
</div>
