<div class="row container h-4">
  <div class="col-6 ">
    <div class="container mt-3 card-bg shdw p-3">
  <h1 class="mt-3">Create a Group</h1>
<%= form_with(model: @group, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>

<div class="form-group ">
  <%=f.label :name%>
  <%=f.text_field :name, class: "form-control"%>
</div>
<div class="form-group ">
  <%=f.label :icon %>
  <%=f.file_field :icon, accept: "image/jpeg,image/gif,image/png", class: "form-control"%>
</div>
  <div class="form-group">
    <%=f.submit "Create Group", class: "btn btn-success"%>
  </div>
  
<% end %>
</div>
    
  </div>
</div>
